<%= form_for [@goal, @update], url: goal_updates_path(@goal) do |f| %>

<div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control", value: Date.today %>
</div>

<div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: "form-control", id: 'new-update-character-field', rows: 2, :maxLength => 200, placeholder: "Title of Update" %>
    <span id="new-update-character-counter">0/200</span>
</div>

<div class="form-group">
    <%= f.label :update_description %>
    <%= f.text_area :update_description, rows: 10, class: "form-control", placeholder: "Body of Update" %>
</div>

<div class="form-group">
    <%= f.submit "Submit Update", class: 'btn btn-primary' %>
</div>


<% end %>