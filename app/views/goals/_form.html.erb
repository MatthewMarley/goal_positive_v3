<%= form_for @goal do |f| %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', id: 'new-goal-character-field', :maxLength => 50, placeholder: 'Enter the title of your goal' %>
        <span id="new-goal-character-counter">0/50</span>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 20, placeholder: 'Add a description for your goal' %>
    </div>
    <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, ['Private', 'Semi Private', 'Public'], class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.submit "Add Goal", class: 'btn btn-primary' %>
    </div>
    

<% end %>