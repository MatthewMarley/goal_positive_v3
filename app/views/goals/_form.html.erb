<%= form_for @goal do |f| %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter the title of your goal' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Add a description for your goal' %>
    </div>
    <div class="form-group">
        <%= f.submit "Add Goal", class: 'btn btn-primary' %>
    </div>
    

<% end %>