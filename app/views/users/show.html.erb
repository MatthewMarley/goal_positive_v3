<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well well-white">
            <%= @user.username %>
            <%= @user.email %>
        </div>
        
        <% @user.goals.each do |goal| %>
            <div class="well">
                <strong>Goal: </strong><%= goal.name %>
                <hr>
                <strong>Description: </strong><%= goal.description %>
                <div class="show-goal-links">
                    <%= link_to "Show Goal", goal_path(goal), class: 'btn btn-xs btn-primary' %>
                <% if logged_in? && (current_user == goal.user) %>
                    <%= link_to "Edit Goal", edit_goal_path, class: 'btn btn-xs btn-warning' %>
                    <%= link_to "Delete Goal", goal_path, method: :delete, data: {confirm: "Are you sure?"},
                    class: 'btn btn-xs btn-danger' %>
                <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>