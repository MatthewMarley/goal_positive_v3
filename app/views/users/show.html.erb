<div class="row">
    <div class="col-md-8">
        <h3><strong>Username: </strong><%= @user.username %></h3></br>
        <h3><strong>Email: </strong><%= @user.email %></h3>
    </div>
</div>
<br>

<div class="user-goals-mouse-events">
    <% @user.goals.each do |goal| %>
    <div class="user-goals-hover-<%=goal.id%>">
        <%= link_to goal_path(goal) do %>
            <div class="user-goals-text-elements-<%=goal.id%>">
                <div class="row user-goals-hover-<%=goal.id%>">
                    <div class="col-md-4">
                        <h2 class="color-light-blue"><%= goal.name %></h2>
                    </div>
                    <div class="col-md-8 user-goals-description">
                        <h4><%= goal.description %></h4>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <% end %>
</div>
</br>
</br>
</br>