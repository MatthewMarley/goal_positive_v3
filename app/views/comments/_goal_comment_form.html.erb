<%= form_for [@commentable, Comment.new], url: goal_comment_comments_path(@goal, comment) do |f| %>
    
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_area :name, rows: 10, class: 'form-control', placeholder: "Enter your comment" %>
    </div>
    
    <div class="form-group">
        <%= f.submit "Enter Comment", class: 'form-control btn btn-xs btn-success' %>
    </div>
    
<% end %>
