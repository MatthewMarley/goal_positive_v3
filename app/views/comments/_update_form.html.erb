<%= form_for [@commentable, @comment], url: update_comments_path(@update) do |f| %>

<div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, rows: 10, class: "form-control", placeholder: "Enter you comment" %>
</div>

<div class="form-group">
    <%= f.submit "Enter Comment", class: "form-control btn btn-xs btn-success" %>
</div>

<% end %>